<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <%= simple_form_for [@cocktail, @dose] do |f| %>
       <%= f.input :description %>
       <%= f.association :ingredient %>
       <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
      <br>
      <%= link_to "List of Cocktails", cocktails_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>
